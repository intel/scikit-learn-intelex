{
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements.*\\.txt$"
    ]
  },
  "packageRules": [
    {
      "fileMatch": [
        "(^|/)requirements-doc.txt$"
      ],
      "groupName": "Doc packages",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 2am on monday"]
    },
    {
      "fileMatch": [
        "(^|/)requirements.*\\.txt$",
        "!requirements-doc.txt"
      ],
      "groupName": null,
      "schedule": "at any time"
    }
  ]
}
