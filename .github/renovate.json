{
  "dependencyDashboard": false,
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements.*\\.txt$",
      "(^|/)dependencies-dev$"
    ]
  },
  "packageRules": [
    {
      "groupName": "Doc packages",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 2am on the first day of the month"],
      "matchFileNames": ["requirements-doc.txt"]
    }
  ]
}
